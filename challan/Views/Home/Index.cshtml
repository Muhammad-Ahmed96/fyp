            </div>
            <div id="warden" class="tab-pane fade in active" style="">
                <div>
                    <div class="shado" style="background-color: #f2f2f2; border-radius:5px;">
                        <form id="formid" style="padding: 10px 30px 20px 30px;">
                            <h1 style="text-align: center;">Sign In:</h1>
                            <div class="tab animate-bottom">
                                <label>Username:</label>
                                <p><input type="text" name="uname" placeholder="Usernmae..." class="form-control" id="uname"></p>
                            </div>
                            <div class="tab animate-bottom">
                                <strong>Email:</strong> <p style="display:inline" id="e"></p><br />
                                Password:
                                <p><input type="password" name="pass" placeholder="Password..." class="form-control"></p>
                            </div>
                            <div style="overflow:auto;">
                                <div id="btn-div">
                                    <button type="button" id="prevBtn" onclick="nextPrev(-1)" class="btn btn-success">Previous</button>
                                    <button type="button" id="nextBtn" onclick="setEmail();nextPrev(1)" class="btn btn-success btn-block">Next</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/javascript.js"></script>
<script>
    $(document).ready(function () {
        $("#litem2").addClass("active");
        $("#link2").css("background-color", "aqua");
    });
    $("#litem1").click(function () {
        $("#warden").removeClass("active");
        $("#warden").removeClass("in");

        $("#challan").addClass("in");
        $("#challan").addClass("active");

        $("#litem2").removeClass("active");
        $("#link2").css("background-color", "white");
        $("#litem1").addClass("active");
        $("#link1").css("background-color", "aqua");
    });
    $("#litem2").click(function () {
        $("#challan").removeClass("in");
        $("#challan").removeClass("active");
        $("#warden").addClass("in");
        $("#warden").addClass("active");
        $("#litem1").removeClass("active");
        $("#link1").css("background-color", "white");
        $("#litem2").addClass("active");
        $("#link2").css("background-color", "aqua");
    });
    function setEmail()
    {
        var uname = $("#uname").val();
        alert(uname);
        $("#e").text(uname);
        $("#btn-div").css("float", "right");
        $("#nextBtn").removeClass("btn-block");

    }
</script>